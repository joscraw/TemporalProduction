# DigitalOcean Managed PostgreSQL Configuration
# Get these from your DigitalOcean database dashboard
POSTGRES_HOST=your-db-host.db.ondigitalocean.com
POSTGRES_USER=doadmin
POSTGRES_PASSWORD=your-secure-password-here
DB_PORT=25060

# Domain Configuration
DOMAIN=temporal.yourdomain.com

# Temporal Versions (update as needed)
TEMPORAL_VERSION=latest
TEMPORAL_UI_VERSION=latest
TEMPORAL_ADMINTOOLS_VERSION=latest

# Resource Configuration
TEMPORAL_NUM_HISTORY_SHARDS=512
TEMPORAL_LOG_LEVEL=info

# Security
# Generate with: openssl rand -hex 32
TEMPORAL_ENCRYPTION_KEY=change-this-to-random-32-byte-hex

# Backup Configuration (optional)
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE="0 2 * * *"  # 2 AM daily

# DigitalOcean Spaces (optional, for backups)
DO_SPACES_KEY=your-spaces-key
DO_SPACES_SECRET=your-spaces-secret
DO_SPACES_REGION=nyc3
DO_SPACES_BUCKET=your-backup-bucket